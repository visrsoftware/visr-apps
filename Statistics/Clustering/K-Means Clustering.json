{
  "label": "K-means Clustering",
  "info": "",
  "input": "none",
  "categories":[  {
    "label": "clustering parameters",
    "info": "",
    "variables": {
      "visr.param.columns": {
        "type": "multi-column-numerical"
      },
      "visr.param.k": {
        "label": "Number of Clusters (K)",
        "type": "int",
        "default": 3,
        "min": 1
      },
      "visr.param.algorithm": {
        "label": "Algorithm",
        "type": "string",
        "items": [ "Hartigan-Wong","Lloyd","MacQueen" ]
      },
      "visr.param.sortids": {
        "label": "Sort cluster IDs by size",
        "info": "Sort clusters based on cluster size before assigning IDs. So largest cluster will always get the cluster ID = 1",
        "type": "boolean",
        "default": true
      }
    }
  },
  {
    "label": "output",
    "info": "",
    "variables": {
      "visr.param.plottype": {
        "label": "Summary Plot",
        "type": "string",
        "items": [ "barplot","splom" ],
        "item-labels": [ "Barplot of Cluster Sizes","Scatterplot Matrix" ]
      },
      "visr.param.output.clusterid": {
        "label": "Column name to output cluster IDs",
        "type": "output-column",
        "default": "clusterid"
      },
      "visr.param.output.clustermeans": {
        "label": "Table name to output cluster means",
        "type": "output-table",
        "default": ""
      }
    }
  }]
}
